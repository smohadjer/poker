
<header>
  <h1>Login</h1>
</header>
<div class="wrapper">
    <form class="form-ajax" id="login" data-redirect="/admin/home" method="POST" action="/api/authenticate">
        <p><label>Username: <input required name="username"></label></p>
        <p><label>Password: <input id="password" required name="password" type="password"></label>
          <button type="button" id="togglePassword">Toggle</button>
        </p>
        <div class="submit">
          <button>Login</button>
        </div>
        <p class="error"></p>
    </form>
</div>
<footer>
  {{> footer season_id=season_id view="login"}}
</footer>

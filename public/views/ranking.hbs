<header>
  <h1>Ranking</h1>
  {{> seasonSelector seasons=seasons season_id=season_id }}
</header>
<div class="wrapper">
  <table class="table-results">
    <tr>
        <th>Rank</th>
        <th>Player</th>
        <th>Points</th>
        <th>Games</th>
        <!--<th>Rebuys</th>-->
    </tr>
    {{#each players}}
      <tr>
          <td>{{inc @index}}</td>
          <td class="name">
            {{#if ../seasonId}}
              <a data-animation="slideInRTL" href="/?view=profile&season={{../seasonId}}&player_id={{this.id}}"
              {{#ifEquals @index 0}}class="first-place"{{/ifEquals}}
              {{#ifEquals @index 1}}class="second-place"{{/ifEquals}}
              {{#ifEquals @index 2}}class="third-place"{{/ifEquals}}>{{this.name}}></a>
            {{else}}
              <a data-animation="slideInRTL" href="/?view=profile&player_id={{this.id}}"
              {{#ifEquals @index 0}}class="first-place"{{/ifEquals}}
              {{#ifEquals @index 1}}class="second-place"{{/ifEquals}}
              {{#ifEquals @index 2}}class="third-place"{{/ifEquals}}>{{this.name}}</a>
            {{/if}}
          </td>
          <td>{{this.points}}</td>
          <td>{{this.games}}</td>
          <!--<td>{{this.rebuys}}</td>-->
      </tr>
    {{/each}}
  </table>
</div>
<footer>
  {{> footer season_id=season_id view=view}}
</footer>

<header>
  <h1>Add Player</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        {{> adminNav id="add-player"}}
        <section>
            <form class="form-ajax" method="POST" action="/api/players">
                <div class="row">
                    <label>Player *</label>
                    <input required name="name">
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
                <p class="error"></p>
            </form>
        </section>
    </main>
</div>
{{> footer season_id=season_id view="admin"}}

<header>
  <h1>Delete Player</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        {{> adminNav id="delete-player"}}
        <section>
            <form class="form-ajax" method="DELETE" action="/api/players">
                <p>Only palyers who have never played in a tournament can be deleted.</p>
                <div class="row">
                    <label>Players</label>
                    <select id="player_delete_dropdown" name="player_id">
                        <option value="">Select player</option>
                    </select>
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
            </form>
        </section>
    </main>
</div>
{{> footer season_id=season_id view="admin"}}

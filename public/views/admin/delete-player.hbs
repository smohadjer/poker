<header>
    <h1>Admin</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        <p><a class="icon icon--inline icon--back" href="/admin/home?tenant_id={{tenant_id}}">Back</a></p>
        <section>
            <h2>Delete players</h2>
            <form class="form-ajax" method="DELETE" action="/api/players">
                <p>Only palyers who have never played in a tournament can be deleted.</p>
                <input type="hidden" name="tenant_id" value="{{tenant_id}}">
                <div class="row">
                    <label>Players</label>
                    <select id="player_delete_dropdown" name="player_id">
                        <option value="">Select player</option>
                    </select>
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
            </form>
        </section>
    </main>
</div>
{{> footer tenant_id=tenant_id season_id=season_id view="admin"}}

{{> adminHeader event_name=event_name tenant_name=tenant_name}}
<div class="wrapper">
    <main class="admin">
        <p><a data-animation="slideInLTR" class="icon icon--inline icon--back" href="/admin/home?event_id={{event_id}}">Back</a></p>
        <section>
            <h2>Delete players</h2>
            <form method="DELETE" action="/api/players">
                <p>Only palyers who have never played in a tournament can be deleted.</p>
                <input type="hidden" name="event_id" value="{{event_id}}">
                <div class="row">
                    <label>Players</label>
                    <select id="player_delete_dropdown" name="player_id">
                        <option value="">Select player</option>
                    </select>
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
            </form>
        </section>
    </main>
</div>
{{> footer event_id=event_id season_id=season_id view="admin"}}

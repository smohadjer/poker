<header>
  <h1>Edit Player</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        {{> adminNav id="edit-player"}}
        <section>
            <form class="form-ajax" method="POST" action="/api/players">
                <div class="row">
                    <label>Players</label>
                    <select id="player_edit_dropdown" name="player_id">
                        <option value="">Select player</option>
                    </select>
                </div>
                <div class="row">
                    <label>New name *</label>
                    <input required name="name">
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
                <p class="error"></p>
            </form>
        </section>
    </main>
</div>
{{> footer season_id=season_id view="admin"}}


<header>
  <h1>Edit Season</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        {{> adminNav id="edit-season"}}
        <section>
            <form class="form-ajax" method="POST" action="/api/seasons">
                <div class="row">
                    <label>Seasons</label>
                    <select id="season_edit_dropdown" name="season_id">
                        <option value="">Select season</option>
                    </select>
                </div>
                <div class="row">
                    <label>New name *</label>
                    <input required name="name">
                </div>
                <div class="submit">
                    <button>Submit</button>
                </div>
                <p class="error"></p>
            </form>
        </section>
    </main>
</div>
{{> footer season_id=season_id view="admin"}}

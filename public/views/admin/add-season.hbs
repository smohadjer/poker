<header>
  <h1>Add Season</h1>
  {{> logout }}
</header>
<div class="wrapper">
    <main class="admin">
        {{> adminNav id="add-season"}}
        <section>
            <form class="form-ajax" method="POST" action="/api/seasons">
                <div class="row">
                    <label>Season *</label>
                    <input required name="name">
                </div>
                 <div class="submit">
                    <button>Submit</button>
                 </div>
                <p class="error"></p>
            </form>
        </section>
    </main>
</div>
{{> footer season_id=season_id view="admin"}}

<header>
  <h1>Tournament Organizer</h1>
  <div class="flex">
    <h2>Events</h2>
    {{#if tenant_name}}
      <div class="align-right">
        <p class="icon icon--inline icon--account">{{tenant_name}}</p>
        {{> logout }}
      </div>
    {{/if}}
  </div>
</header>
<div class="wrapper">
    <main>
      <p>Select an event to see tournament results:</p>
      <form class="mg-top loading">
        <select id="events_dropdown">
          <option selected option="">Select Event</option>
        </select>
      </form>

      {{#if tenant_id}}
        <section>
          <form class="form-ajax" method="POST" action="/api/events">
            <label>Create new event:</label>
            <input name="name">
            <div class="submit">
              <button>Submit</button>
            </div>
          </form>
        </section>
      {{/if}}

      <p><a href="/login">Login</a> or <a href="/register">register</a> to start creating or updating your own events.</p>
    </main>
</div>
